.col-lg-3.col-lg-offset-1
  - if task.done?
    .well{ :class => "task-done" }
      %strong= task.name
      = link_to '', task_path(task), method: :delete, remote: true, class: 'glyphicon glyphicon-remove delete-link'
  - else
    = link_to get_done_task_path(task), class: 'task-link',remote: true do
      .well{ :class => "task-to-do" }
        %strong= task.name
        = link_to '', task_path(task), method: :delete, remote: true, class: 'glyphicon glyphicon-remove delete-link'

