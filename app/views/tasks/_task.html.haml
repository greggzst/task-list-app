.col-lg-3.col-lg-offset-1
  - if task.done?
    .well{ :id => "task_#{task.id}", :class => "task-done" }
      %strong= task.name
      = link_to '', task_path(task), method: :delete, remote: true, class: 'glyphicon glyphicon-remove delete-link'
  - else
    .well{ :id => "task_#{task.id}", :class => "task-to-do" }
      %strong= link_to task.name, get_done_task_path(task), class: 'task-link',remote: true
      = link_to '', task_path(task), method: :delete, remote: true, class: 'glyphicon glyphicon-remove delete-link'

